@page

@model IndexModel
@{
}

<div>
    <a class="btn btn-success" href="/Product/Create">Create New Product</a>
</div>


<table class="table table-bordered table-hover" style="margin-top:20px;" >

    <thead>
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Price</td>
            <td>Description</td>
            <td></td>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-Id="@item.Id">
                        <span><i class="fa fa-trash-o"></i></span>
                    </a>
                    <a class="btn btn-sm btn-warning" asp-page="Update" asp-route-Id="@item.Id">
                        <span><i class="fa fa-edit"></i></span>
                    </a>
                </td>
            </tr>
        }

    </tbody>

</table>